@inject ISessionStorageService _sessionStorage;

@page "/issue"
@using MeetNSeat.Client.Services
@using MeetNSeat.Client.Models
@using Blazored.SessionStorage
@attribute [Authorize]

<main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4">
    <h2 class="pt-3 pb-2 mb-3 border-bottom">Report issue</h2>
    <div>
        <form>
            <div class="mb-3">
                <label for="issue" class="form-label">Issue</label>
                <textarea class="form-control" id="issue" placeholder="Enter your issue here." style="height: 100px" @bind="Description" @bind:event="oninput" maxlength="1000"></textarea>
                Characters : @Description.Length / 1000
            </div>
            <div class="mb-3">
                <label for="room" class="form-label">Room</label>
                <select class="form-control" @bind="Room" @bind:event="oninput" aria-label="Default select example">
                    <option placeholder="Select a location here">Select a room</option>
                    <option value="1">Kamer 1</option>
                    <option value="2">Kamer 2</option>
                    <option value="3">Kamer 3</option>
                </select>
            </div>
            <button @onclick="AddIssue" type="button" disabled="@IsDisabled" class="btn btn-primary">Report issue</button>
        </form>
    </div>
</main>

@{ IsDisabled = Description.Length <= 0; }

@code {
	private static string Description { get; set; } = string.Empty;

    private int Room { get; set; }
    
    private bool IsDisabled { get; set; } = true;

    private async Task AddIssue()
    {
        var userId = await _sessionStorage.GetItemAsync<string>("userId");
        await IssueService.AddIssue(new IssueModel(Description, Room, userId));
    }
}
